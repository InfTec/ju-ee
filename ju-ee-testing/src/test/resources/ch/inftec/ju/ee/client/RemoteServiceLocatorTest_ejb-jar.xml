<?xml version="1.0" encoding="UTF-8"?>

<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_2.xsd"
	version="3.2">

	<enterprise-beans>
		<!-- Define the TestRunnerFacadeBean to run tests in the JBoss container -->
		<session>
			<ejb-name>TestRemoteInterfaceBean</ejb-name>
			<remote>ch.inftec.ju.ee.test.TestRemote</remote>
			<ejb-class>ch.inftec.ju.ee.test.TestRemoteBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>
	</enterprise-beans>
</ejb-jar>